<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_song_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/song_cover" />

    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/iv_song_cover"
        android:textColor="@color/song_title"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        tools:text="@string/unknown" />

    <TextView
        android:id="@+id/tv_song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_song_title"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@id/iv_song_cover"
        android:layout_alignBottom="@id/iv_song_cover"
        android:textColor="@color/song_artist"
        android:textSize="13sp"
        tools:text="@string/unknown" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignStart="@+id/tv_song_title"
        android:layout_below="@id/iv_song_cover"
        android:background="@color/line_between_songs" />

</RelativeLayout>